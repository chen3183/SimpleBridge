<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/panel_1">

        <Button
            android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p1 cross alone"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p2 cross alone"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p5 cross alone"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p10 cross alone"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p1 corss with p2"
            android:textSize="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/panel_2"
        android:layout_toRightOf="@+id/panel_1">

        <Button
            android:id="@+id/button6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p1 corss with p5"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p1 cross with p10"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p2 cross with p5"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p2 cross with p10"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="p5 cross with p10"
            android:textSize="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/panel_3"
        android:layout_toRightOf="@+id/panel_2"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text = "\n\nWelcome to the Bridge Crossing Problem.\n\nPerson Pn can cross the bridge in n minutes.Only one or two persons can cross at a time because it is dark,and the flashlight must be taken on every crossing.When two people cross, they travel at the speed of the slowest person.Devise a sequence of crossings so that all four people get across the bridge in no more than 17 minutes." />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Start" />
            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Restart"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
